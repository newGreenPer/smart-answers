<% content_for :title do %>
  <% if calculator.under_green_deal? and !(calculator.eligible_for_winter_fuel_payment? or calculator.eligible_for_cold_weather_payment?) %>
    <% render partial: 'title_under_green_deal.govspeak.erb' %>
  <% else %>
    <% render partial: 'title_energy_supplier.govspeak.erb' %>
  <% end %>
<% end %>

<% content_for :body do %>
  <% if calculator.under_green_deal? and !(calculator.eligible_for_winter_fuel_payment? or calculator.eligible_for_cold_weather_payment?) %>
    <%= render partial: 'callout_under_green_deal.govspeak.erb' %>
  <% end %>
  <% if calculator.both_help? %>
    <% if calculator.eligible_for_winter_fuel_payment? %>
      <%= render partial: 'winter_fuel_payments.govspeak.erb' %>
    <% end %>
    <% if calculator.eligible_for_warm_home_discount? %>
      <%= render partial: 'warm_home_discount.govspeak.erb' %>
    <% end %>
    <% if calculator.eligible_for_cold_weather_payment? %>
      <%= render partial: 'cold_weather_payment.govspeak.erb' %>
    <% end %>
  <% end %>
  <% if !calculator.benefits_claimed_and_can_install_boiler? %>
    <%= render partial: 'boilers_and_insulation.govspeak.erb', locals: {calculator: calculator} %>
  <% end %>
  <% if calculator.may_qualify_for_affordable_warmth_obligation? %>
    <%= render partial: 'may_qualify_for_affordable_warmth_obligation.govspeak.erb' %>
  <% end %>
  <% if calculator.under_green_deal? and calculator.eligible_for_winter_fuel_payment? and calculator.eligible_for_cold_weather_payment? %>
    <%= render partial: 'header_green_deal.govspeak.erb' %>
    <%= render partial: 'opt_eco_help.govspeak.erb' %>
    <%= render partial: 'callout_under_green_deal.govspeak.erb' %>
  <% end %>
  <% if calculator.benefits_claimed_and_can_install_boiler? %>
    <%= render partial: 'boilers_and_insulation.govspeak.erb', locals: {calculator: calculator} %>
  <% end %>
  <%= render partial: 'header_heating.govspeak.erb' %>
  <%= render partial: 'opt_better_heating_controls.govspeak.erb' %>
  <% unless calculator.mains_gas? %>
    <%= render partial: 'opt_heat_pump.govspeak.erb' %>
    <%= render partial: 'opt_biomass_boilers_heaters.govspeak.erb' %>
    <%= render partial: 'opt_solar_water_heating.govspeak.erb' %>
  <% end %>
  <% unless calculator.modern_double_glazing? %>
    <%= render partial: 'header_windows_and_doors.govspeak.erb' %>
    <%= render partial: 'opt_replacement_glazing.govspeak.erb' %>
  <% end %>
  <%= render partial: 'opt_renewal_heat.govspeak.erb' %>
  <%= render partial: 'help_and_advice.govspeak.erb' %>
  <%= render partial: 'help_and_advice_body.govspeak.erb' %>
<% end %>
